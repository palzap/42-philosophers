NAME		= philo
HEADER		= philosophers.h

#----------DIRS----------#

SRC =	actions.c \
	free.c \
	init.c \
	main.c \
	threads.c \
	utils.c \
	utils2.c \

#--------COMMANDS--------#
CC = clang
CFLAGS = -Wall -Wextra -Werror
AR = ar rcs
RM = rm -rf

OBJ = ${SRC:.c=.o}

#---------RULES---------#
.c.o:
			$(CC) $(CFLAGS) -c -I $(HEADER) $< -o ${<:.c=.o}

all: 		$(NAME)

$(NAME): 	$(OBJ) 
			$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
			@$(RM) $(OBJ) $(BONUS_OBJ)

fclean: 	clean
			@$(RM) $(NAME)

re: fclean all
